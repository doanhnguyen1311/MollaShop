@model Category
@{
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post">
            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" />
            <div class="form-group">
                <label for="categoryName"><b>Tên loại hàng:</b></label>
                <input type="text" name="@nameof(Model.CategoryName)" id="categoryName" value="@Model.CategoryName" class="form-control" placeholder="Nhập tên loại hàng" />
                @Html.ValidationMessage(nameof(Model.CategoryName), new { @style = "color: red" })
            </div>
            <div class="form-group">
                <label for="description"><b>Mô tả:</b></label>
                <textarea id="description" class="form-control" rows="4" name="@nameof(Model.Description)" placeholder="Nhập mô tả loại hàng">@Model.Description</textarea>
                @Html.ValidationMessage(nameof(Model.Description), new { @style = "color: red" })
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>