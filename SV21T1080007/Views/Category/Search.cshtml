@model SV21T1080007.Web.Models.CategorySearchResult
@{
    Layout = null;
}

<p>
    Có <b>@Model.RowCount</b> loại hàng trong tổng số <b>@Model.PageCount</b> trang.
</p>
<!-- Category List -->
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th style="width: 30%;">Tên Loại Hàng</th>
                <th style="width: 60%;">Mô tả</th>
                <th style="width: 80px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td class="text-right">
                        <a href="~/Category/Edit/@item.CategoryID" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Category/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="text-center">
    <ul class="pagination">
        @for (int p = 1; p <= Model.PageCount; p++)
        {
            if (p == Model.Page)
            {
                <li class="active"><a href="#">@p</a></li>
            }
            else
            {
                <li><a onclick="doSearch(@p)" href = "javascript:;">@p</a></li>
            }
        }
    </ul>
</div>