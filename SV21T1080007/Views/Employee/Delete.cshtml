@model SV21T1080007.DomainModels.Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}

<style>
    .img-bordered {
        border: 3px solid #d2d6de;
        padding: 3px;
        margin-left: 152px;
    }

    .btn-danger {
        background-color: #dd4b39;
        border-color: #d73925;
        margin-left: 152px;
    }
</style>

<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" method="post" action="~/Employee/Delete/@Model.EmployeeID">
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.FullName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.BirthDate.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.Address</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.Phone</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Trạng thái:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        @(Model.IsWorking ?
                            "Đang làm việc"
                            :
                            "Đang không làm việc"
                            )
                    </p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo"
                         src="@(string.IsNullOrEmpty(Model.Photo) ? Url.Content("~/themes/dist/img/user4-128x128.jpg") : Url.Content(Model.Photo))"
                         class="img img-bordered" style="width:200px" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    @if (!SV21T1080007.BusinessLayers.CommonDataService.InUsedEmployee(Model.EmployeeID))
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                            Xác nhận xóa
                        </button>
                    }
                    <a href="/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

