            color: #000000;
        }

        .sanpham {
            background: linear-gradient(90deg, #aba800, #ffffc4);
            color: #000;
        }

        .donhang {
            background: linear-gradient(to left, #ffa7a7, #ff1336);
            color: #000;
        }

        canvas {
            width: 100% !important;
        }

        .btn {
            border-radius: 17px;
        }

        .btn-success {
            color: #fff;
            background: linear-gradient(45deg, black, transparent);
        }

            .btn-success:hover {
                background: linear-gradient(91deg, #e9dbdb, #e5cfcf, #e3c6b5, #edc4b7, #e3baba);
                border-color: #cd8b8b;
                color: #000;
            }

        .btn-warning {
            background: linear-gradient(45deg, black, transparent);
            border: 1px solid orange;
        }

            .btn-warning:hover {
                background: linear-gradient(45deg, #ffffff, transparent);
                border-color: #a3947c;
                color: #000;
            }

        .btn-info {
            background: linear-gradient(45deg, black, transparent);
            border-color: yellow;
        }

            .btn-info:hover {
                background: linear-gradient(45deg, #b4fcff, #baf9ff);
                border-color: #000;
                color: #000;
            }

        .btn-primary {
            background: linear-gradient(45deg, black, transparent);
            border-color: deeppink;
        }

            .btn-primary:hover {
                background: linear-gradient(45deg, #baffcf, #ffe6e6);
                border-color: #000;
                color: #000;
