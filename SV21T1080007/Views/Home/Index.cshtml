            </div>
        </div>
        <div class="card doanhthu text-center">
            <div class="card-body">
                <h3 class="card-title">
                    1,200,000VND
                    <span style="margin:0 10px ;"></span>
                    <i class="fas fa-sack-xmark"></i>
                </h3>
                <h5 class="card-title">Doanh thu tháng này</h5>
                <a href="" class="btn btn-warning">Xem Chi Tiết <i class="fa-solid fa-arrow-trend-down"></i></a>
            </div>
        </div>
        <div class="card sanpham text-center">
            <div class="card-body">
                <h3 class="card-title">
                    367
                    <span style="margin:0 10px ;"></span>
                    <i class="fa-brands fa-shopify"></i>
                </h3>
                <h5 class="card-title">Sản phẩm trong kho</h5>
                <a href="~/Product" class="btn btn-info">Xem Chi Tiết <i class="fa-solid fa-arrow-trend-down"></i></a>
            </div>
        </div>
        <div class="card donhang text-center">
            <div class="card-body">
                <h3 class="card-title">
                    100
                    <span style="margin:0 10px ;"></span>
                    <i class="fa fa-clipboard-list"></i>
                </h3>
                <h5 class="card-title">Đơn hàng trong tháng</h5>
                <a href="~/Order" class="btn btn-primary">Xem Chi Tiết <i class="fa-solid fa-arrow-trend-down"></i></a>
            </div>
        </div>
    </div>

    <!-- Biểu đồ -->
    <canvas id="myAreaChart"></canvas>
    <script>
        console.log(window.innerWidth);
        console.log(window.innerHeight);

        const ctx = document.getElementById('myAreaChart').getContext('2d');

        ctx.fillContext = "#fff";
        const myAreaChart = new Chart(ctx, {
            type: 'line', // sử dụng loại biểu đồ là 'line'
            data: {
                labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6', 'Tháng 7'], // nhãn cho trục x
                datasets: [{
                    label: 'Doanh thu', // tiêu đề của dữ liệu
                    data: [10000000, 20000000, 30000000, 15000000, 25000000, 35000000, 40000000], // dữ liệu cho trục y
                    backgroundColor: 'rgba(100, 188, 136, 0.7)', // màu nền
                    borderColor: 'rgb(0, 104, 36)', // màu viền
                    borderWidth: 1, // độ dày viền
                    fill: false // lấp đầy diện tích dưới đường biểu diễn
                }
                
                ,
            {
                label: 'Chi phí',
                data: [5000000, 10000000, 15000000, 8000000, 12000000, 18000000, 22000000],
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 1,
                fill: false
            },
            {
                label: 'Lợi nhuận',
                data: [5000000, 10000000, 15000000, 7000000, 13000000, 17000000, 18000000],
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1,
                fill: false
            },
            {
                label: 'Số đơn hàng',
                data: [300, 400, 500, 350, 450, 600, 700],
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1,
                fill: false
            }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true, // bắt đầu từ 0
                        ticks: {
                            color: 'gray', // màu chữ cho trục y
                            callback: function (value) { return value.toLocaleString(); } // định dạng số
                        },
                        grid: {
                            color: 'rgba(0,0,0,0.1)' // màu lưới cho trục y
                        }
                    },
                    x: {
                        ticks: {
                            color: 'gray', // màu chữ cho trục x
                        },
                        grid: {
                            color: 'rgba(0,0,0,0.1)' // màu lưới cho trục x
                        }
                    }
                },
                plugins: {
                    legend: {
                        labels: {
                            color: 'gray' // màu chữ cho nhãn
                        }
                    }
                }
            }
        });
    </script>
</div>
