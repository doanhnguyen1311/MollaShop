@model SV21T1080007.Web.Models.ShipperSearchResult
@{
    Layout = null;
}

<p>
    Có <b>@Model.RowCount</b> người giao hàng trong tổng số <b>@Model.PageCount</b> trang.
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th style="width: 20%;">Tên đơn vị giao hàng</th>
                <th style="width: 20%;">Số điện thoại</th>
                <th style="width: 10%;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.ShipperName</td>
                    <td>@item.Phone</td>
                    <td class="text-right">
                        <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="text-center">
    <ul class="pagination">
        @for (int p = 1; p <= Model.PageCount; p++)
        {
            if (p == Model.Page)
            {
                <li class="active"><a href="#">@p</a></li>
            }
            else
            {
                <li><a onclick="doSearch(@p)" href="javascript:;">@p</a></li>
            }
        }
    </ul>
</div>
