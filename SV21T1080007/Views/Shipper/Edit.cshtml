@model Shipper
@{
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Save" method="post"> 
            <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID"/>
            <div class="form-group">
                <label for="shipperName"><b>Tên shipper:</b></label>
                <input type="text" id="shipperName" name="@nameof(Model.ShipperName)" class="form-control" value="@Model.ShipperName" placeholder="Nhập tên shipper" />
                @Html.ValidationMessage(nameof(Model.ShipperName), new { @style = "color: red" })
            </div>

            <div class="form-group">
                <label for="phoneNumber"><b>Số điện thoại:</b></label>
                <input type="text" id="phoneNumber" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone" placeholder="Nhập số điện thoại" />
                @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color: red" })
            </div>

            <div class="form-group text-right">
                @if (Model.ShipperID == 0)
                {
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-save"></i> Tạo mới thông tin
                    </button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu thay đổi
                    </button>
                }
            </div>
        </form>
    </div>
</div>
