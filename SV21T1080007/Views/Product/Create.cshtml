@{
    ViewBag.Title = "Tạo Sản Phẩm Mới";
}


<div class="box box-primary">
    <div class="box-body">
        <form>
            <!-- Tên sản phẩm -->
            <div class="form-group">
                <label for="productName"><b>Tên sản phẩm:</b></label>
                <input type="text" id="productName" class="form-control" placeholder="Nhập tên sản phẩm" />
            </div>

            <!-- Loại hàng -->
            <div class="form-group">
                <label for="category"><b>Loại hàng:</b></label>
                <select id="category" class="form-control">
                    <option>-- Chọn loại hàng --</option>
                </select>
            </div>

            <!-- Nhà cung cấp -->
            <div class="form-group">
                <label for="supplier"><b>Nhà cung cấp:</b></label>
                <select id="supplier" class="form-control">
                    <option>-- Chọn nhà cung cấp --</option>
                </select>
            </div>

            <!-- Giá sản phẩm -->
            <div class="form-group">
                <label for="price"><b>Giá:</b></label>
                <input type="number" id="price" class="form-control" placeholder="Nhập giá sản phẩm" />
            </div>

            <!-- Đơn vị tính -->
            <div class="form-group">
                <label for="unit"><b>Đơn vị tính:</b></label>
                <input type="text" id="unit" class="form-control" placeholder="Nhập số lượng: đơn vị (cái)" />
            </div>

            <!-- Ảnh sản phẩm -->
            <div class="form-group">
                <label for="productImage"><b>Ảnh sản phẩm:</b></label>
                <input type="file" id="productImage" class="form-control" />
            </div>

            <!-- Nút tạo sản phẩm -->
            <div class="form-group text-right">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-check"></i> Tạo sản phẩm
                </button>
            </div>
        </form>
    </div>
</div>
