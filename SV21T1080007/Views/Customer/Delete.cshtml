@model SV21T1080007.DomainModels.Customer
@{
    ViewBag.Title = "Xóa Khách Hàng";
}

<div class="box box-danger">
    <div class="box-body">
        <form action="~/Customer/Delete/@Model.CustomerID" method="post">
            <div class="form-group">
                <label for="customerName"><b>Họ tên khách hàng:</b></label>
                <p class="form-control-static form-control">@Model.CustomerName</p>
            </div>

            <div class="form-group">
                <label for="tengiaodich"><b>Tên giao dịch:</b></label>
                <p class="form-control-static form-control">@Model.ContactName</p>
            </div>

            <div class="form-group">
                <label for="address"><b>Địa chỉ:</b></label>
                <p class="form-control-static form-control">@Model.Address</p>
            </div>

            <div class="form-group">
                <label for="phone"><b>Số điện thoại:</b></label>
                <p class="form-control-static form-control">@Model.Phone</p>
            </div>

            <div class="form-group">
                <label for="email"><b>Email:</b></label>
                <p class="form-control-static form-control">@Model.Email</p>
            </div>
            <div class="form-group">
                <label for="status"><b>Trạng thái:</b></label>
                <p class="form-control-static form-control">@(Model.IsLocked ? "Tài khoản đang bị khóa" : "Tài khoản đang hoạt động")</p>
            </div>

            <div class="form-group text-right">
                @if (!SV21T1080007.BusinessLayers.CommonDataService.InUsedEmployee(Model.CustomerID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Xóa dữ liệu
                    </button>
                }
                <a href="~/Customer" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>

