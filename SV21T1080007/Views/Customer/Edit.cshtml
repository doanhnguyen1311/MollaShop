@model SV21T1080007.DomainModels.Customer
@{
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Customer/Save" method="post">
            <input type="hidden" name="@nameof(Model.CustomerID)" value="@Model.CustomerID"/>
            <div class="form-group">
                <label for="customerName"><b>Họ tên khách hàng:</b></label>
                <input type="text" id="customerName" class="form-control" placeholder="Nhập họ tên khách hàng" name="@nameof(Model.CustomerName)" value="@Model.CustomerName" autofocus/>
                @Html.ValidationMessage(nameof(Model.CustomerName), new { @style = "color: red"})
            </div>

            <div class="form-group">
                <label for="tengiaodich"><b>Tên giao dịch:</b></label>
                <input type="text" id="tengiaodich" class="form-control" placeholder="Nhập tên giao dịch" name="@nameof(Model.ContactName)" value="@Model.ContactName" />
                @Html.ValidationMessage(nameof(Model.ContactName), new { @style = "color: red" })
            </div>

            <div class="form-group">
                <label for="address"><b>Địa chỉ:</b></label>
                <input type="text" id="address" class="form-control" placeholder="Nhập địa chỉ" name="@nameof(Model.Address)" value="@Model.Address"/>
                @Html.ValidationMessage(nameof(Model.Address), new { @style = "color: red" })
            </div>

            <div class="form-group">
                <label for="phone"><b>Số điện thoại:</b></label>
                <input type="tel" id="phone" class="form-control" placeholder="Nhập số điện thoại" name="@nameof(Model.Phone)" value="@Model.Phone"/>
                @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color: red" })
            </div>

            <div class="form-group">
                <label for="email"><b>Email:</b></label>
                <input type="email" id="email" class="form-control" placeholder="Nhập email" name="@nameof(Model.Email)" value="@Model.Email"/>
                @Html.ValidationMessage(nameof(Model.Email), new { @style = "color: red" })
            </div>

            <div class="form-group">
                <label>Tỉnh thành</label>
                <select class="form-control" name="@nameof(Model.Province)">
                    <option value="" disabled selected>---Chọn tỉnh thành---</option>
                    @foreach (var item in SV21T1080007.BusinessLayers.CommonDataService.ListOfProvince())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName" >@item.ProvinceName</option>
                        }
                    }
                </select>
                @Html.ValidationMessage(nameof(Model.Province), new { @style = "color: red" })
            </div>

            <div class="checkbox">
                <label><input type="checkbox" name="@nameof(Model.IsLocked)" @(Model.IsLocked ? "checked" : "") value="true"/> Tài khoản đang bị khóa</label>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                </button>
                <a href="~/Customer" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>
