@model Supplier
@{
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />

            <div class="form-group">
                <label for="supplierName"><b>Tên nhà cung cấp:</b></label>
                <input type="text" name="@nameof(Model.SupplierName)" class="form-control" value="@Model.SupplierName" placeholder="Nhập tên nhà cung cấp" />
                @Html.ValidationMessage(nameof(Model.SupplierName), new { @style = "color: red" })
            </div>

            <div class="form-group">
                <label for="contractName"><b>Tên hợp đồng:</b></label>
                <input type="text" name="@nameof(Model.ContactName)" value="@Model.ContactName" class="form-control" placeholder="Nhập tên hợp đồng" />
                @Html.ValidationMessage(nameof(Model.ContactName), new { @style = "color: red" })
            </div>

            <div class="form-group">
                <label>Tỉnh thành</label>
                <select class="form-control" id="province" name="@nameof(Model.Province)">
                    <option value="" disabled selected>---Chọn tỉnh thành---</option>
                    @foreach (var item in SV21T1080007.BusinessLayers.CommonDataService.ListOfProvince())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }
                </select>
                @Html.ValidationMessage(nameof(Model.Province), new { @style = "color: red" })
            </div>

            <div class="form-group">
                <label for="address"><b>Địa chỉ:</b></label>
                <input type="text" id="address" name="@nameof(Model.Address)" value="@Model.Address" class="form-control" placeholder="Nhập địa chỉ" />
                @Html.ValidationMessage(nameof(Model.Address), new { @style = "color: red" })
            </div>

            <div class="form-group">
                <label for="phoneNumber"><b>Số điện thoại:</b></label>
                <input type="text" id="phoneNumber" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone" placeholder="Nhập số điện thoại" />
                @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color: red" })
            </div>

            <div class="form-group">
                <label for="email"><b>Email:</b></label>
                <input type="email" id="email" class="form-control" placeholder="Nhập email" name="@nameof(Model.Email)" value="@Model.Email" />
                @Html.ValidationMessage(nameof(Model.Email), new { @style = "color: red" })
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-save"></i> Lưu thông tin
                </button>
                <a href="~/Supplier" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>
